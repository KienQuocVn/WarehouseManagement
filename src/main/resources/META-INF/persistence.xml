<persistence xmlns="http://xmlns.jcp.org/xml/ns/persistence" version="2.1">
    <persistence-unit name="CanXuatNhapKho">
        <class>model.User</class> <!-- Thêm class User -->
        <properties>
            <!-- Driver và URL kết nối -->
            <property name="hibernate.connection.driver_class" value="com.microsoft.sqlserver.jdbc.SQLServerDriver" />
            <property name="hibernate.connection.url" value="jdbc:sqlserver://localhost;databaseName=warehouse_management;encrypt=false" />
            <property name="hibernate.connection.username" value="sa" />
            <property name="hibernate.connection.password" value="12345" />

            <!-- Dialect của SQL Server -->
            <property name="hibernate.dialect" value="org.hibernate.dialect.SQLServerDialect" />

            <!-- Tự động tạo bảng -->
            <property name="hibernate.hbm2ddl.auto" value="update" />

            <!-- Hibernate options -->
            <property name="hibernate.show_sql" value="true" />
            <property name="hibernate.format_sql" value="true" />
        </properties>
    </persistence-unit>
</persistence>
